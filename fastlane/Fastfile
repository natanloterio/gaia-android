# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do
  desc "Runs all the tests"
  lane :test do
    gradle(task: "test")
  end

  desc "Build & distribute to Firebase App Distribution"
  lane :beta do
    # Build the app (APK or AAB)
    gradle(
      task: "assemble",
      build_type: "Release"   # Or `debug` if you want a debug build
    )

    # Upload to Firebase App Distribution
    firebase_app_distribution(
      app:          ENV['FIREBASE_APP_ID'],     # e.g., "1:1234567890:android:abcdef"
      groups:       "beta-testers",             # commaâ€‘separated group names or IDs
      release_notes_file: "./fastlane/release_notes.txt",
      firebase_token_path: "~/.fastlane/firebase-service-account.json",
      apk:          "./app/build/outputs/apk/release/app-release.apk"  # path to built APK
    )
  end

  desc "Deploy a new version to the Google Play"
  lane :deploy do
    gradle(task: "clean assembleRelease")
    upload_to_play_store
  end
end
